<form method="post">
  <p>
    <label>Title</label>
    <input type="text" style="width:100%" name="title"><%= @page.title %></p>
  </p>
  <p>
    <label>Body</label>
    <textarea style="width:100%" name="body" rows="20"><%= @page.body %></textarea>
  </p>
  <p>
    <input type="submit" value="Save"/>
  </p>
</form>

<script type="text/javascript">
  wmd_options = { output: "Markdown" };
</script>

<script type="text/javascript" src="/assets/wmd/wmd.js"></script>
