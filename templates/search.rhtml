<h2>Search</h2>

<form action="/search">
  <input type="text" name="q" value="<%= params['q'] %>"/>
  <input type="submit" value="Search"/>
</form>

<% for page, sections in @matches %>
  <h4><%= link_to page.title, page_path(page) %></h4>
  <% for section in sections %>
    <div class="section">
      <%= section %>
    </div>
  <% end %>
<% end %>
